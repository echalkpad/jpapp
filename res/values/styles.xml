<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#ffffff</item>
    </style>
    
    <!-- Button theme. -->
    <style name="ButtonTheme" parent="AppBaseTheme">
        <item name="android:textColor">#3B6DAC</item>	<!-- grey blue -->
    </style>
    
    <!-- Accent Bg theme. -->
    <style name="DarkBgTheme" parent="AppBaseTheme">
        <item name="android:background">#2F5687</item>	<!-- navy blue -->
        <item name="android:textColor">#ffffff</item>
    </style>
    
    <!-- Main bg theme. -->
    <style name="NormalBgTheme" parent="AppBaseTheme">
        <item name="android:background">#3B6DAC</item>	<!--  light navy blue -->
        <item name="android:textColor">#ffffff</item>
    </style>

    <dimen name="radarview_btn_margin">8dp</dimen>
    
    <color name="color_pending_item">#e3e3e3</color> 		<!-- light grey -->
    <color name="color_pending_item_done">#fcfcfc</color> 	<!-- off white -->
    <color name="color_separate_line">#c0c0c0</color> 		<!-- grey -->
    
    
    
    
    <!-- Accent Text Bold Theme -->
    <style name="AccentTextTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00B0ED</item>	<!-- light blue text -->
    </style>
    
    <!-- Accent Text Reg Theme -->
    <style name="AccentTextTheme2">
        <item name="android:textColor">#00B0ED</item>	<!-- light blue text -->
    </style>
    
  	<!--  Self Circle Theme -->
    <style name="CircleSelfBgTheme">
        <item name="android:color">#005F9A</item>		<!-- blue bg -->
    </style>
    
    <!--  Other User Circle Theme -->
    <style name="CircleUserBgTheme">
        <item name="android:color">#00B0ED</item>		<!-- light blue bg -->
    </style>
    
    <!--  Selected/Unselected Circle Themes -->
    <style name="CircleSelectedTheme">
        <item name="android:width">5dp</item>
        <item name="android:color">#9EDEEF</item>		<!-- really light blue border -->
    </style>
    <style name="CircleNotSelectedTheme">
        <item name="android:width">2dp</item>
        <item name="android:color">#9EDEEF</item>		<!-- really light blue border -->
    </style>
    
    <!--  Locked Circle Theme -->
     <!--  Other User Circle Theme -->
    <style name="CircleLockedBgTheme">
        <item name="android:color">#00B0ED</item>		<!-- light blue bg -->
    </style>
    
    <style name="CircleLockTheme">
        <item name="android:width">5dp</item>
        <item name="android:color">#cccccc</item>		<!-- grey bold border -->
    </style>
    
    <!--  Highlight Circle BG Theme -->
    <style name="HighlightBgTheme">
        <item name="android:color">#C7E5ED</item>		<!-- really light blue bg -->
    </style>
    
    <!--  Button BG Theme -->
    <style name="ButtonBGTheme">
        <item name="android:color">#ED0A00</item>		<!-- red bg -->
    </style>
    
</resources>