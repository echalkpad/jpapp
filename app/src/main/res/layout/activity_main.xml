<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_main_background"
    tools:context="com.soontobe.joinpay.MainActivity" >
	
    <!--  Logo -->
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    style="@style/DarkBgTheme"
	    android:layout_marginTop="0dp">
	  	<TextView 
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:text="Join"
	           android:textColor="#ffffff"
	           android:textSize="50sp"
	           android:gravity="right"
	           android:layout_weight="0.5"
	           />
	  	<TextView 
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:text="Pay"
	           android:textColor="#ffffff"
	           android:textStyle="bold"
	           android:textSize="50sp"
	           android:gravity="left"
	           android:layout_weight="0.5"
	           />
  	</LinearLayout>
  	
	<!-- Welcome -->
	<TextView 
	     android:id="@+id/welcome_user_name"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="Welcome User"
         android:textColor="#ffffff"
         android:textSize="18sp"
         android:layout_marginTop="20dp"
         android:gravity="center"
         />
   
    <!-- Buttons -->
    <Button
        android:id="@+id/button0"
        style="@style/ButtonTheme"
        android:layout_marginTop="15dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:onClick="onCheckPointsClicked"
        android:background="@drawable/selector_button"
        android:textSize="18sp"
        android:text="Check Points" 
        android:visibility="gone"/>
    
    <Button
        android:id="@+id/button1"
        style="@style/ButtonTheme"
        android:layout_marginTop="15dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:onClick="onButtonClick"
        android:background="@drawable/selector_button"
        android:textSize="18sp"
        android:text="Enter" />  
        
    <Button
        android:id="@+id/button_citiAccount"
        style="@style/ButtonTheme"
        android:layout_marginTop="15dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:onClick="onCitiAccountClicked"
        android:background="@drawable/selector_button"
        android:textSize="18sp"
        android:text="Citi Account" 
       />
    
    <TextView 
          android:id="@+id/citiLink"
          android:text="link here"
          android:layout_width="fill_parent"
          android:layout_height="50dp"
          android:gravity="center"
          android:textColor="#ffffff"/>
    
    <!-- Break -->
    <View
	    android:layout_width="fill_parent"
	    android:layout_height="2dp"
	    android:layout_marginBottom="80dp"/>

    <Button
        android:id="@+id/button_logout"
        style="@style/ButtonTheme"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:onClick="onLogoutClicked"
        android:background="@drawable/selector_button"
        android:textSize="18sp"
        android:text="Logout" 
        android:layout_marginBottom="50dp"
        android:layout_gravity="bottom|center"
       />
    
    <!--  Citi Logo -->
    <ImageView
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="@drawable/citi"
        android:layout_gravity="bottom|center" />
</LinearLayout>